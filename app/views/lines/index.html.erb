<div class="container">
<p id="notice"><%= notice %></p>

<h1>线路管理</h1>

<table class="table">
  <thead>
    <tr>
      <th>始发地</th>
      <th>目的地</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lines.each do |line| %>
      <tr>
        <td><%= line.place %></td>
        <td><%= line.destination %></td>
        <td><%= link_to '查看', line %></td>
        <td><%= link_to '编辑', edit_line_path(line) %></td>
        <td><%= link_to '删除', line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加新路线', new_line_path %>
<%= link_to '返回首页', root_path %>
</div>