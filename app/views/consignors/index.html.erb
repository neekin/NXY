<div class="container">
<p id="notice"><%= notice %></p>

<h1>发货人列表</h1>

<table class="table">
  <thead>
    <tr>
      <th>姓名</th>
      <th>电话</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consignors.each do |consignor| %>
      <tr>
        <td><%= consignor.name %></td>
        <td><%= consignor.phone %></td>
         <td><%= link_to '查看', consignor %></td>
        <td><%= link_to '编辑', edit_consignor_path(consignor) %></td>
        <td><%= link_to '删除', consignor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加新发货人', new_consignor_path %>
</div>